# ============================================
# Database (Vercel Postgres or any PostgreSQL)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/riff"

# ============================================
# NextAuth.js Configuration
# ============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"

# ============================================
# OAuth Providers (optional - enable as needed)
# ============================================

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# Email Provider (for magic link auth)
# ============================================
# SMTP connection string
EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"
EMAIL_FROM="noreply@riff.app"

# ============================================
# Vercel Blob Storage
# ============================================
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# ============================================
# AI Services
# ============================================

# Vercel AI Gateway (for text generation, theme generation)
AI_GATEWAY_API_KEY=your_ai_gateway_api_key_here
AI_GATEWAY_MODEL=moonshotai/kimi-k2-0905

# Google Gemini API (for image generation and restyling)
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# ============================================
# Resend (for transactional emails)
# ============================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
# Verified domain sender (set up domain at resend.com/domains)
RESEND_FROM_EMAIL=hello@yourdomain.com
RESEND_FROM_NAME="Your Name"
RESEND_REPLY_TO=hello@yourdomain.com
RESEND_BCC_EMAIL=hello@yourdomain.com

# ============================================
# DodoPayments (for credits system)
# ============================================
# Get from: https://dashboard.dodopayments.com/developer/api-keys
DODO_PAYMENTS_API_KEY=your_api_key_here
# test_mode for development, live_mode for production (auto-detected if not set)
DODO_PAYMENTS_ENVIRONMENT=test_mode
DODO_WEBHOOK_SECRET=your_webhook_secret_here
# Create a credits product in Dodo dashboard, copy the product ID
DODO_CREDITS_PRODUCT_ID=prod_your_product_id_here
# Initial free credits for new users (optional, defaults to 50)
# INITIAL_FREE_CREDITS=50
